  section.wrapper.contacts
    header
      h2 与我们合作
    .cooperate.clearfix
      .form
        ul
          li
            label 您的称呼：
            input(type='text' name='custName' placeholder='最多8个字' value='')
          li
            label 联系电话：
            input.phone(type='text' name='cellphone' placeholder='您的手机' maxlength='11' value='')
          li
            label 联系邮箱：
            input(type='text' name='email' placeholder='您的邮箱' value='')
            //-p *邮箱格式错误,请重新输入
          li
            label 合作内容：
            //input(type='text' name='msg')
            select(name='coopType')
              option(value='1') 资金提供
              option(value='2') 商家入驻
              option(value='3') 市场合作
              option(value='4') 其他
            i.iconfont.icon-xiajiantou
          li
            label 留言内容：
            textarea(name='content' maxlength=200 placeholder='请输入留言内容，最多输入200字')
          li
            input.imageCaptchaId(type='hidden' name='imageCaptchaId')
            label 验证码：
            input.verCode(type='text' name='verifyCode' placeholder='请输入验证码')

            img.verifyCode
            //img.verifyCode(src='#{captchaPath}')
        .submit-box
          button.btn.submit-btn 提交
      .map#allmap
      //-.map
        img(data-original='/images/map01.png')



